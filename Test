#include <iostream>
#include <string>
 
using namespace std;
 
int main()
{
    //While loop example
    bool onRollerCoaster = true;
    while (onRollerCoaster)
    {
        cout << "Ahhh!" << endl;
        onRollerCoaster = false;
    }
 
    //For loop example
    for (int i = 0; i < 10; i++)
    {
        cout << i << endl;
    }
 
    //Break example
    while (true)
    {
        break;
    }
 
    //Continue example
    for (int i = 0; i < 10; i++)
    {
        if (i % 2 == 0)
            continue;
        cout << i << endl;
    }
}
